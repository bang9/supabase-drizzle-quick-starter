{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "paths": {
      "@starter/*": ["/packages/*/index.ts"]
    }
  }
}
